<%- include("../partials/html-head") %> 
<%- include("../partials/nav") %>

<main>
  
  <h1>Profiles</h1>
  <% profiles.forEach(profile => {
    <a href="/profiles/<%= profile._id %>">
      <% if (profile.avatar) { %>
        <img src="<%= profile.avatar%>" alt="<%= profile.name %>'s avatar"/>
      <% } else { %>
        <img src="/images/icons/user.png" alt="A placeholder  avatar" />
      <%= } %>
      <p><%= profile.name %></p>
    </a>
  }) %> 

</main>

